{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "outDir": "./dist", // 指定编译输出的目录为 dist
    "rootDir": "./src" // 指定源代码的根目录为 src
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
